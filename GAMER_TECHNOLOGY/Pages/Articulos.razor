                    <a href="#" title="PORTATILES" class="level-1 trsn nav-link">PORTATILES</a>
                </li>
            </ul>    
        </div>
    </nav>
</div>
@if (articulos == null) {
    <p><em>Loading...</em></p>
}
else
{
    <div class="row mb-md-5 mb-4 mx-md-n2 mx-n1 no-gutters">
        @foreach (var listArt in articulos)
        {
                <div class="col-lg-3 col-6 px-md-2 px-1">
                   <div class="product-block text-center mb-md-3 mb-2 p-md-3 p-2 rounded trsn">
                      <a class="product-img d-block">
                          <img class="img-fluid img-portfolio img-hover mb-2"src="@listArt.Imagen"/>
                      </a>
                </div>
                <div class="caption">
                    <div class="brand-name small trsn">
                        <h4>
                            <a>@listArt.Nombre</a>
                        </h4>
                    </div>
                    <p>@listArt.Descripcion</p>
                    <span>@listArt.Precio</span>
                    <br/>
                    <button  @onclick="Save" class="btn btn-primary" type="button">Agregar</button>
                </div>
              
            </div>
        }
    </div>
}

@code {

    private IEnumerable<Articulo> articulos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            articulos = await ArticuloService.GetAll();

        }
        catch(Exception)
        {
            throw;
        }
    }

    public Articulo articulo = new Articulo();
    


    private Articulo articulop = new Articulo();

    private CartItem cartItem = new CartItem{Quantity = 1};

    [Parameter]
    public int id { get; set; }


    private async Task AddToCart()
    {
        await CartService.AddToCart(cartItem);
    }


    public async void Save()
    {
        await LocalStorage.SetItemAsync("carrrito", articulop);
    }


}
